<resources>
    <!-- Base application theme. -->
    <style name="Theme.App.MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/gray</item>
        <!-- Window background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- TextColorHint hint color -->
        <item name="android:textColorHint">@color/transparentWhite</item>
    </style>

    <!-- BottomNavigation style -->
    <style name="BottomNavigationTheme" parent="Theme.App.MainTheme">
        <item name="colorPrimary">#00B65F</item>
    </style>

    <!-- SplashScreen style -->
    <style name="Theme.App.SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_app</item>
        <item name="postSplashScreenTheme">@style/Theme.App.MainTheme</item>
    </style>

    <!-- TabLayout style -->
    <style name="Theme.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/white</item>
    </style>

    <!-- BottomSheetDialog ThemeOverlay style -->
    <style name="Theme.App.OverlayBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.App.BottomSheetModalTransparent</item>
    </style>

    <!-- BottomSheetModal style -->
    <style name="Theme.App.BottomSheetModalTransparent" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar">
        <!-- Toolbar icon color -->
        <item name="colorControlNormal">@color/white</item>
        <!-- SearchView text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- SearchView selection stroke color -->
        <item name="colorControlActivated">@color/transparentWhite</item>
        <!-- SearchView selected text background color -->
        <item name="colorSecondary">@color/darkGreen</item>
    </style>

</resources>